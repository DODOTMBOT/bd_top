generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model RolePageAccess {
  roleKey String
  path    String
  allowed Boolean  @default(false)

  @@id([roleKey, path])
  @@index([roleKey])
  @@index([path])
}

model AdminUser {
  id        String  @id @default(cuid())
  email     String  @unique
  roleKey   String
  pointName String?
  active    Boolean @default(true)

  @@index([roleKey])
}