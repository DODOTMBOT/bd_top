generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Partner {
  id        String   @id @default(cuid())
  name      String
  accountId String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  account   User     @relation("PartnerAccount", fields: [accountId], references: [id], onUpdate: Restrict)
  points    Point[]
}

model Point {
  id        String   @id @default(cuid())
  name      String
  address   String?
  partnerId String
  accountId String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  account   User     @relation("PointAccount", fields: [accountId], references: [id], onUpdate: Restrict)
  partner   Partner  @relation(fields: [partnerId], references: [id], onUpdate: Restrict)
  employees User[]   @relation("PointEmployees")

  @@index([partnerId])
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  login              String?  @unique
  name               String?
  passwordHash       String
  role               Role
  mustChangePassword Boolean  @default(false)
  pointId            String?
  partnerId          String?
  isActive           Boolean  @default(true)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  partnerAccount     Partner? @relation("PartnerAccount")
  pointAccount       Point?   @relation("PointAccount")
  point              Point?   @relation("PointEmployees", fields: [pointId], references: [id], onUpdate: Restrict)

  @@index([role])
  @@index([pointId])
}

model Page {
  id        String   @id @default(cuid())
  path      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RolePageAccess {
  roleKey String
  path    String
  allowed Boolean @default(false)

  @@id([roleKey, path])
  @@index([roleKey])
  @@index([path])
}

enum Role {
  OWNER
  PARTNER
  POINT
  USER
}
